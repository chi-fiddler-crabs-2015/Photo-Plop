<h1><%= @album.title %></h1>
<%= link_to "Upload New Image", new_album_image_path(@album.id) %>
<% if @album.owner?(session[:user_id]) %>
  <%= link_to "Edit Album", edit_album_path(@album.id) %>
<% end %>
<br>

<% @album.images.each do |image| %>
  <%= cl_image_tag(image.location) %>
  <% if image.owner?(session[:user_id]) %>
    <%= button_to "DELETE", {:controller => :images,
      :action => 'destroy', album_id: @album.id, :id => image.id }, :method => :delete %>
  <% end %>
  <br>
<% end %>
