<div class="album_show">
  <div class="row">
    <div class="small-9 large-9 columns">
      <h1><%= @album.title %></h1>
      <p>Description: <%= @album.description %></p>
      <p>Creator: <%= @album.creator.username %></p>
    </div>
    <div class="small-3 large-3 columns">

      <div id="favorite-button-container">
        <% if current_user %>
          <%= render partial: "favorites/button"%>
        <% end %>
      </div>

      <% if @album.owner?(current_user) %>
        <%= link_to "Edit", edit_album_path(@album.id) %>
      <% end %>

      <div id="upload-photo-box">
        <%= link_to "New Image", new_album_image_path(@album.id), remote: true, id: "upload_button" %>
      </div>

      <button id="share-button">SHARE THIS ALBUM</button>
      <div id="share-url-container" style="display: none;">
        Your album's URL is: <span><input type="text" value="http://www.photoplop.com/<%= @album.vanity_url %>" disabled></input></span>
        <img src="http://media.idownloadblog.com/wp-content/uploads/2013/04/Twitter-2.2-Mac-app-icon-small.png">
        <img src="http://www.waterproof-usa.com/_images/common/instagram.png">
      </div>

    </div>
  </div>






  <ul class="small-block-grid-3 medium-block-grid-5 large-block-grid-6">
    <% @album.images.each do |image| %>
       <li class="img-tile">
        <% if image.owner?(current_user) %>
          <%= button_to "DELETE", {:controller => :images,
          :action => 'destroy', album_id: @album.id, :id => image.id }, :method => :delete %>
        <% end %>
        <%= link_to image_tag(image.location, :type => "fetch", :width => 200, :height=> 200, :crop => :thumb), album_image_path(@album.id, image.id) %>
      </li>
    <% end %>
  </ul>
</div>
