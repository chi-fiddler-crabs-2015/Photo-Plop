<%= form_for :album, method: :put, url: album_path(params[:id]) do |f| %>
  <%= render "shared/errors" %>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :permissions, "Anyone with link can see and contribute" %>
  <%= f.radio_button :permissions, "1" %>

  <%= f.label :permissions, "Anyone with link can see, password required to contribute" %>
  <%= f.radio_button :permissions, "2" %>

  <%= f.label :permissions, "Anyone with link can see, only specified accounts can contribute" %>
  <%= f.radio_button :permissions, "3" %>

  <%= f.label :permissions, "Password required to see album and contribute" %>
  <%= f.radio_button :permissions, "4" %>

  <%= f.label :permissions, "Password required to see album, only specified accounts can contribute" %>
  <%= f.radio_button :permissions, "5" %>

  <%= f.label :permissions, "Only specified accounts can see album and contribute" %>
  <%= f.radio_button :permissions, "6" %>

  <%= f.submit "Update" %>
<% end %>

<% @album.images.each do |image| %>
  <%= cl_image_tag(image.location) %>
  <%= button_to "DELETE", {:controller => :images,
      :action => 'destroy', album_id: @album.id, :id => image.id }, :method => :delete %>
  <br>
<% end %>

<%= button_to "DELETE ALBUM", @album, method: :delete %>

