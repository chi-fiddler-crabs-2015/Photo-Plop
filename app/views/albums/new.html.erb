<h2>Create an Album</h2>

<%= form_for :album, url: albums_path, html: {id: 'new-album-form'} do |f| %>
  <%= render "shared/errors" %>
  <div class="10 columns">
    <%= f.label :title, "Album Title" %>
    <%= f.text_field :title, :required => true %>

    <%= f.label :description, "Describe Your Album" %>
    <%= f.text_area :description %>

    <label for="read_privilege">Who can view your album?</label>
    <%= f.radio_button :read_privilege, "1" %>
    <%= f.label :read_privilege, "Anyone" %>

    <%= f.radio_button :read_privilege, "2" %>
    <%= f.label :read_privilege, "Anyone with the password" %>

    <label for="write privilege">Who can add images to your album?</label>
    <%= f.radio_button :write_privilege, "1" %>
    <%= f.label :write_privilege, "Anyone" %>

    <%= f.radio_button :write_privilege, "2" %>
    <%= f.label :write_privilege, "Anyone with the password" %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.submit "Create Your Album" %>
  </div>
<% end %>
