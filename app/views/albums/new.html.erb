<!-- this is a partial that pops up over the list of albums -->
<!-- field for title, option to add images, radio buttons for permission options -->
<!-- can X this out to cancel creating album -->

<h2>Create an Album</h2>

<%= form_for :album, url: albums_path do |f| %>
  <%= render "shared/errors" %>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>

  <%= f.label :description %>
  <%= f.text_area :description %>



  <%= f.submit "Create" %>
<% end %>
