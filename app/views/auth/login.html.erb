<%= link_to "Create Account", new_user_path %>

<h1>THIS IS A SIGNIN FORM</h1>
<% if flash[:alert] %>
  <p class="welcome"> <%=flash[:alert] %></p>
<% end %>
<%= form_for :user do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log In" %>
<% end %>

