<% content_for :title, "Create an Account" %>
<div class="user_new">
<div class="row">
	<span class="small-12 medium-12 large-4 large-centered columns">
	<h2>Create an Account</h2>
	<%= form_for :user, url: users_path do |f| %>
	  <%= render "shared/errors" %>
	  <%= f.label :username %>
	  <%= f.text_field :username %>

	  <%= f.label :email %>
	  <%= f.email_field :email %>

	  <%= f.label :password %>
	  <%= f.password_field :password %>

	  <%= f.submit "Create Account" %>
	<% end %>

	<%= link_to raw("<i class=\"fa fa-twitter\"></i> Sign Up with Twitter"), '/auth/twitter', :class => "button" %>

	</span>
</div></div>