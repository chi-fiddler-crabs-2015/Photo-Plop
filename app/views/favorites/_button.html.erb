
<% if @favorite.nil? %>
  <%= content_tag(:a, fa_icon("heart-o"), href: favorites_path, params: {user: current_user, album: @album}, form: { id: "favorite-button", remote: true } ) %>
<% elsif @favorite.favorite == false %>
  <%= content_tag(:a, fa_icon("heart-o"), href: favorites_path, params: {user: current_user, album: @album}, form: { id: "favorite-button", remote: true } ) %>
<% else %>
  <%= content_tag(:a, fa_icon("heart"), href: favorites_path, params: {user: current_user, album: @album}, form: { id: "favorite-button", remote: true } ) %>
<% end %>

