<% if @favorite.nil? %>
  <%= link_to raw("<i class=\"fa fa-heart-o\"></i>"), favorites_path, params: {user: current_user, album: @album}, id: "favorite-button", remote: true,  method: :put %>
<% elsif @favorite.favorite == false %>
  <%= link_to raw("<i class=\"fa fa-heart-o\"></i>"), favorites_path, params: {user: current_user, album: @album}, id: "favorite-button", remote: true,  method: :put %>
<% else %>
  <%= link_to raw("<i class=\"fa fa-heart\"></i>"), favorites_path, params: {user: current_user, album: @album}, id: "favorite-button", remote: true,  method: :put %>
<% end %>
