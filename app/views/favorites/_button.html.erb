<% if @favorite.nil? %>
  <%= button_to "Mark as Favorite", favorites_path, params: {user: current_user, album: @album}, form: { id: "favorite-button", remote: true }, class: 'fa fa-heart-o' %>
<% elsif @favorite.favorite == false %>
  <%= button_to "Mark as Favorite", favorites_path, params: {user: current_user, album: @album}, form: { id: "favorite-button", remote: true }, class: 'fa fa-heart-o'%>
<% else %>
  <%= button_to "Remove Favorite", favorites_path, params: {user: current_user, album: @album}, form: { id: "favorite-button", remote: true }, class: 'fa fa-heart' %>
<% end %>

