
<% if @favorite.nil? %>
  <%= content_tag(:a, fa_icon("heart-o") + "Like", href: favorites_path, params: "user=#{current_user.id}&album=#{@album.id}" ) %>
<% elsif @favorite.favorite == false %>
  <%= content_tag(:a, fa_icon("heart-o") + "Like", href: favorites_path, params: "user=#{current_user.id}&album=#{@album.id}" ) %>
<% else %>
  <%= content_tag(:a, fa_icon("heart") + "Unlike", href: favorites_path, params: "user=#{current_user.id}&album=#{@album.id}" ) %>
<% end %>

